<UserControl x:Class="Chat.Client.Views.CappuVoteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat.Client.Views"
             xmlns:presenters="clr-namespace:Chat.Client.Presenters;assembly=Chat.Client.Presenters"
             xmlns:models="clr-namespace:Chat.Shared.Models;assembly=Chat.Shared.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance presenters:CappuVotePresenter}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="2">
            <TextBlock FontSize="20" Text="Online users" Foreground="{StaticResource AccentLightColor2}" HorizontalAlignment="Left"/>
            <ListView ItemsSource="{Binding CappuVoteViewModel.OnlineCappuUsers}"
                      VerticalAlignment="Stretch"
                      Background="Transparent"
                      BorderThickness="0" >
                <ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:SimpleUser}">
                        <Border Background="Transparent">
                            <TextBlock Text="{Binding Username}"
                                       Foreground="White"
                                       Background="Transparent"/>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        
        
        <Border Background="Transparent"
                Margin="5"
                VerticalAlignment="Top"
                Grid.Column="0">
            <StackPanel>
                <Button Content="Create Vote" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                <Button Content="End vote" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                <Button Content="Force go" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
